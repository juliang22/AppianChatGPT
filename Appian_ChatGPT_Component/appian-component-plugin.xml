<?xml version="1.0"?>
<appian-component-plugin name="ChatGPT" key="com.appian.chatgpt">
  <plugin-info>
    <description>ChatGPT Component Plugin</description>
    <vendor name="Appian" url="www.Appian.com"/>
    <version>1.0.0</version>
    <support supported="true" phone="xxx-xxx-xxxx" email="techpartners@appian.com" url="https://community.appian.com"/>
  </plugin-info>
  <component rule-name="ChatGPTChatBot" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
    <icon-file>image.svg</icon-file>
    <html-entry-point>index.html</html-entry-point>
    <parameter>
      <name>openAIConnectedSystem</name>
      <category>input-only</category>
      <type>ConnectedSystem</type>
    </parameter>
    <parameter>
      <name>systemMessage</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>initialMessage</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>model</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>temperature</name>
      <category>input-only</category>
      <type>Decimal</type>
    </parameter>
    <parameter>
      <name>top_p</name>
      <category>input-only</category>
      <type>Decimal</type>
    </parameter>
    <parameter>
      <name>n</name>
      <category>input-only</category>
      <type>Integer</type>
    </parameter>
    <parameter>
      <name>stop</name>
      <category>input-only</category>
      <type>Text?list</type>
    </parameter>
    <parameter>
      <name>max_tokens</name>
      <category>input-only</category>
      <type>Integer</type>
    </parameter>
    <parameter>
      <name>presence_penalty</name>
      <category>input-only</category>
      <type>Decimal</type>
    </parameter>
    <parameter>
      <name>frequency_penalty</name>
      <category>input-only</category>
      <type>Decimal</type>
    </parameter>
    <parameter>
      <name>user</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>style</name>
      <category>input-only</category>
      <type>Dictionary</type>
    </parameter>
  </component>
</appian-component-plugin>